    "url-loader": "^4.1.1",
    "windy-radix-palette": "^0.5.0"
  },
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "none",
    "singleQuote": true,
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn validate"
  }
}
